<div class="span4">
	<h1>Login here</h1>
	<br/>

	<%= form_tag 'login', method: 'post' do %>
	    <%= text_field_tag 'name', nil, :id => "username", :placeholder => 'username' %>
	    <br/>
	    <%= password_field_tag 'password', nil,  :placeholder => 'password' %> 
	    <br/>
	    <%= submit_tag 'Login' %>
	<% end %> 
</div>
