<section id="forms">
  <div class="row">
    <div class="span5 offset1" >
      <fieldset>
        <legend>
          <h1>Post details</h1>
        </legend>
        <div class="form-horizontal well">
          <div class="control-group">
            <label class="control-label" style="font-size:medium">Title</label>
            <div class="controls">
              <label class="checkbox" style="font-size:medium">
                <%= @post.title %>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" style="font-size:medium">Url</label>
            <div class="controls">
              <label class="checkbox" style="font-size:medium">
                <%= link_to(@post.url, fix_url(@post.url))%>
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" style="font-size:medium">Category</label>
            <div class="controls">
              <label class="checkbox" style="font-size:medium">
                <%= @post.category.name %>
              </label>
            </div>
          </div>
        </div>
      </fieldset>
    </div>
  </div>
</section>

<div class="row" style="font-size:medium">
  <div class="span5 offset1">
    <ul class="breadcrumb">
      <li>
      	<a href="#">
      		<%= link_to 'Edit', edit_post_path(@post) %>
      	</a>
      	<span class="divider">/</span>
      	<a href="#">
      		<%= link_to 'Back to profile', user_path(@post.user) %>
      	</a>
      </li>
    </ul>
  </div>
</div>


