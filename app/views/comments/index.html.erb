<div class="span4">
	<h1>Comments</h1>
</div>

<div class="span4">
	<div class="controls">
		<% if logged_in? %>
			<h2>Add a comment:</h2>
			<%= form_for(Comment.new, url: post_comments_path(@post)) do |f| %>
		        <%= f.text_area :body, :class => "input-xlarge", :id => "textarea", :rows => "3" %>
		        <br/>
		        <%= f.submit "Comment", :class => "btn btn-primary", :style => "font-size:medium" %>
			<% end %>
		<% else %>
			<p id="notice" class='alert alert-warning' style="font-size:medium">
				<%= "You must be logged in in order to post comments." %>
			</p>
		<% end %>
	</div>

	<p style="font-size:medium">This post has <%= pluralize(@post.comments.size, 'comment') %>.</p>
	<div class="well" >
		<% @post.comments.each do |comment| %>
	    	<p style="font-size:medium"><%= display_name(comment.user) %></p>
	    	<p style="font-size:medium"><%= comment.body %></p>
	    	<hr/>
		<% end %>
	</div>
</div>
